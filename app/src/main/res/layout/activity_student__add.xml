<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Add"
    android:orientation="vertical"
android:layout_marginTop="5dp"
android:padding="5dp"    >

    <ImageView
        android:id="@+id/studentpicturi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:onClick="pictureclik1"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:textColor="#0A0101"
                android:id="@+id/stunameid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittextstyle"
                android:hint="Name"
                android:paddingStart="20dp"
                android:textSize="20dp" />

            <EditText
                android:textColor="#0A0101"
                android:id="@+id/sturollid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Roll NO."
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />

            <EditText
                android:textColor="#0A0101"
                android:id="@+id/sturegid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Registation NO."
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />

            <EditText
                android:textColor="#0A0101"
                android:id="@+id/stuFathernameid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Father Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />

            <EditText
                android:textColor="#0A0101"
                android:id="@+id/stuMoternameid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Mother Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />
            <EditText
                android:textColor="#0A0101"
                android:id="@+id/stumobileid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />
            <EditText
                android:textColor="#0A0101"
                android:id="@+id/stuEmailid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittextstyle"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textSize="20dp"

                />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#0A0101"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/edittextstyle"
                    android:onClick="dateofbirth"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:text="Date Of Birth :"
                    android:textSize="20dp" />

                <TextView              android:textColor="#0A0101"
                    android:id="@+id/student_dateofbirthid"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittextstyle"
                    android:paddingStart="5dp"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextstyle"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView android:textColor="#0A0101"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Blood"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Spinner
                    android:textColor="#0A0101"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/studentblodeid"
                    >

                </Spinner>



            </LinearLayout>



            <Button
                android:onClick="studentaddclick"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/buttonstyle"
                android:text="Student Add"
                android:textSize="30dp"
                android:textStyle="bold"

                android:textAllCaps="false"

                />
        </LinearLayout>


    </ScrollView>
</LinearLayout>