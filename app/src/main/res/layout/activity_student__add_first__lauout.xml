<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Add_first_Lauout"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ><LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/stu"/>
        <LinearLayout
            android:background="@drawable/edittextstyle"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="5dp">
            <TextView android:textColor="#0A0101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Department"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Spinner
                android:textColor="#0A0101"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:paddingStart="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/studepertmentid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >

            </Spinner>




        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView android:textColor="#0A0101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Session"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Spinner
                android:textColor="#0A0101"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/studentseeionid"
                >

            </Spinner>



        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittextstyle">

            <TextView              android:textColor="#0A0101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Select Shift"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioGroup              android:textColor="#0A0101"
                android:id="@+id/stushiftid"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton              android:textColor="#0A0101"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"

                    android:id="@+id/stufirstid"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Shift"
                    android:textSize="20dp"

                    />

                <RadioButton              android:textColor="#0A0101"
                    android:layout_margin="2dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_weight="1"
                    android:id="@+id/stusecondid"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seconde Shift"
                    android:textSize="20dp"
                    />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ok"
            android:layout_marginTop="10dp"
            android:onClick="okclik"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/buttonstyle"
            />
    </LinearLayout>

    </ScrollView>

</LinearLayout>