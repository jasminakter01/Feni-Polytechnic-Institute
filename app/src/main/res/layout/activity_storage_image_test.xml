<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageImageTest"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="10dp">
    <Button
        android:background="#082DFC"
        android:textColor="#F5F2F2"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Choose Image"
        android:textAllCaps="false"
        android:id="@+id/chooseimageid2"/>
    <EditText
        android:layout_weight="0.25"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter a  Name for Image "
        android:id="@+id/imagenameid2"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:id="@+id/imageid2"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <ProgressBar
        android:layout_marginTop="5dp"
        android:layout_weight="0.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressbarid2"/>
    <Button
        android:background="#082DFC"
        android:textColor="#F5F2F2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:id="@+id/saveimageid2"

        android:layout_weight="0.17"/>

    <Button
        android:background="#082DFC"
        android:textColor="#F5F2F2"
        android:id="@+id/displayimageid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:layout_marginTop="10dp"
        android:text="Display Image" />
</LinearLayout>