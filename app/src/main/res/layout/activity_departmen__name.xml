<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"

    tools:context=".Departmen_Name">
<LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        android:id="@+id/computerid"
        android:orientation="vertical"
        android:layout_weight="1"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/computericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#DD1647DD"
                ></View>
            <TextView
                android:textColor="#DD2344EC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer"
                android:textSize="25dp"
                android:textStyle="bold"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        android:id="@+id/civillid"
        android:layout_weight="1"


        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/civilicon"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#DD1647DD"
                ></View>
            <TextView
                android:textColor="#DD0D44EB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil"
                android:textSize="25dp"
                android:textStyle="bold"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<LinearLayout
android:layout_weight="1"
android:gravity="center"
android:clipToPadding="false"

android:layout_width="match_parent"
android:layout_height="0dp"
android:orientation="horizontal">

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="10dp"
    android:id="@+id/archid"
    android:orientation="vertical"
    android:layout_weight="1"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/arcicon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#DD1647DD"
            ></View>
        <TextView
            android:textColor="#DD156CC9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Architecture"
            android:textSize="25dp"
            android:textStyle="bold"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="10dp"
    android:id="@+id/electid"
    android:layout_weight="1"


    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/electricalicon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#DD1647DD"
            ></View>
        <TextView
            android:textColor="#DD2E27FD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrical"
            android:textSize="25dp"
            android:textStyle="bold"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>
<LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:clipToPadding="false"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/mechaid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/mechnicalicon" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#DD1647DD"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanical"
                android:textColor="#DD1F3EFF"
                android:textSize="25dp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/powerid"
            android:layout_weight="1"


            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/powericon"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#DD1647DD"
                    ></View>
                <TextView
                    android:textColor="#DD275CFD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power"
                    android:textSize="25dp"
                    android:textStyle="bold"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </LinearLayout>